<component type="desktop">
    <id>com.github.artemanufrij.showmypictures.desktop</id>
    <metadata_license>CC0-1.0</metadata_license>
    <project_license>GPL-3.0+</project_license>
    <name>Memories</name>
    <summary>Manage local image files</summary>
    <description>
        <p>A very fast image viewer designed extra for large local libraries.</p>
    </description>
    <categories>
        <category>Graphics</category>
    </categories>
    <custom>
        <value key="x-appcenter-color-primary">#404040</value>
        <value key="x-appcenter-color-primary-text">rgb(255,255,255)</value>
        <value key="x-appcenter-suggested-price">1</value>
    </custom>
    <developer_name>Artem Anufrij</developer_name>
    <url type="homepage">https://artemanufrij.github.io</url>
    <url type="bugtracker">https://github.com/artemanufrij/showmypictures/issues</url>
    <url type="help">https://github.com/artemanufrij/showmypictures/issues</url>
    <update_contact>artem.anufrij@live.de</update_contact>
    <screenshots>
        <screenshot type="default">
            <caption>Albums</caption>
            <image>https://raw.githubusercontent.com/artemanufrij/showmypictures/master/screenshots/Screenshot.png</image>
        </screenshot>
    </screenshots>
    <releases>
        <release version="0.1.4" date="2018-01-31">
            <description>
                <p>Fix:</p>
                <ul>
                    <li>update hash, after editing the picture</li>
                </ul>
                <p>Improved:</p>
                <ul>
                    <li>Right click on an album behavior</li>
                    <li>Order pictures by hour, minute, second inside an album</li>
                </ul>
            </description>
        </release>
        <release version="0.1.3" date="2018-01-26">
            <description>
                <p>New:</p>
                <ul>
                    <li>Merge Albums</li>
                    <li>Copy Image into Clipboard by press [Ctrl+c]</li>
                    <li>Monitor files for external changes to automatically update their content in the app</li>
                    <li>Canon .CR2 support</li>
                    <li>Show Camera details like ISO, FNumber, Exposure Time, Focal Length</li>
                    <li>Labels/Keywords support</li>
                </ul>
                <p>Fix:</p>
                <ul>
                    <li>Preview pictures follow rotation</li>
                </ul>
                <p>Improved:</p>
                <ul>
                    <li>Open external files</li>
                </ul>
            </description>
        </release>
        <release version="0.1.2" date="2018-01-22">
            <description>
                <p>New:</p>
                <ul>
                    <li>Open external files</li>
                    <li>[F4] Show basic photo details (Exif)</li>
                </ul>
                <p>Improved:</p>
                <ul>
                    <li>Clean up context menu for missing files</li>
                    <li>Start up behavior (much faster)</li>
                </ul>
            </description>
        </release>
        <release version="0.1.1" date="2018-01-19">
            <description>
                <p>New:</p>
                <ul>
                    <li>[Ctrl+Left/Right] for rotation</li>
                </ul>
                <p>Fix:</p>
                <ul>
                    <li>Screenshot for AppCenter</li>
                </ul>
                <p>Changes:</p>
                <ul>
                    <li>Move to Exiv2</li>
                </ul>
            </description>
        </release>
        <release version="0.1.0" date="2018-01-15">
            <description>
                Initial Release
            </description>
        </release>
    </releases>
</component>
